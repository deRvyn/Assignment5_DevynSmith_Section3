@{
    ViewData["Title"] = "Home Page";
}

@*imports the data*@
@model BookListViewModel

<div class="text-center">
    <h1 class="display-4 text-left">Book List</h1>
    
    @*sets up the table and headings*@
    <table class="text-left table table-striped table-dark table-hover">
        <tr class="text-left text-light">
            <th>#</th>
            <th>Title</th>
            <th>Author</th>
            <th>Page Count</th>
            <th>Publisher</th>
            <th>ISBN</th>
            <th>Classification</th>
            <th>Category</th>
            <th>Price</th>
        </tr>
        @*renders each entry in the database into a new row of the table*@
        @*NOTE author is combined here because in the context of viewing the data it makes more sense*@
        @foreach (var x in Model.Books)
        {
        <tr class="text-left text-light">
            <td>@x.BookId</td>
            <td>@x.Title</td>
            <td>@x.AuthorFirstName @x.AuthorMiddleName @x.AuthorLastName</td>
            <td>@x.Pages</td>
            <td>@x.Publisher</td>
            <td>@x.Isbn</td>
            <td>@x.Classification</td>
            <td>@x.Category</td>
            <td>$@x.Price</td>
        </tr>
        }
        </table>

        @*adding the pagination buttons*@
        <div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true" page-class="btn"
             page-class-normal="btn-outline-dark bg-light"
             page-class-selected="btn-primary"
             class="btn-group pull-right m-1"></div>

    

</div>
