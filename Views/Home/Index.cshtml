@{
    ViewData["Title"] = "Home Page";
}

@*imports the data*@
@model IQueryable<Book>

<div class="text-center">
    <h1 class="display-4 text-left">Book List</h1>
    
    @*sets up the table and headings*@
    <table class="text-left table table-dark table-hover">
        <tr class="text-left text-light">
            <th>#</th>
            <th>Title</th>
            <th>Author</th>
            <th>Publisher</th>
            <th>ISBN</th>
            <th>Classification</th>
            <th>Category</th>
            <th>Price</th>
        </tr>
        @*renders each entry in the database into a new row of the table*@
        @*NOTE author is combined here because in the context of viewing the data it makes more sense*@
        @foreach (var x in Model)
        {
        <tr class="text-left text-light">
            <td>@x.BookId</td>
            <td>@x.Title</td>
            <td>@x.AuthorFirstName @x.AuthorMiddleName @x.AuthorLastName</td>
            <td>@x.Publisher</td>
            <td>@x.Isbn</td>
            <td>@x.Classification</td>
            <td>@x.Category</td>
            <td>$@x.Price</td>
        </tr>
        }
        </table>

    

</div>
